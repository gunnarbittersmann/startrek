				{
					"@type": "TVEpisode",
					"episodeNumber": "3.7",
					"name": "A Mathematically Perfect Redemption",
					"datePublished": "2022-10-06",
					"workTranslation": {
						"@type": "TVEpisode",
						"inLanguage": "de",
						"name": "Eine mathematisch perfekte Vergeltung",
						"datePublished": "2022-10-07"
