					"datePublished": "2023-09-28",
					"workTranslation": {
						"@type": "TVEpisode",
						"inLanguage": "de",
						"name": "Empathische Irrtümer",
						"datePublished": "2023-09-28"
					},
					"director": {
						"@type": "Person",
