					"name": "In the Cradle of Vexilon",
					"datePublished": "2023-09-14",
					"workTranslation": {
						"@type": "TVEpisode",
						"inLanguage": "de",
						"name": "In der Wiege Vexilons",
						"datePublished": "2023-09-14"
