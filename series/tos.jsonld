				{
					"@type": "TVEpisode",
					"episodeNumber": "2.1",
					"name": "Amok Time",
					"datePublished": "1967-09-15",
					"workTranslation": {
						"@type": "TVEpisode",
						"inLanguage": "de",
						"name": "Weltraumfieber",
