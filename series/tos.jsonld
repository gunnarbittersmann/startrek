				{
					"@type": "TVEpisode",
					"episodeNumber": "3.1",
					"name": "Spock’s Brain",
					"datePublished": "1968-09-20",
					"workTranslation": {
						"@type": "TVEpisode",
						"inLanguage": "de",
						"name": "Spocks Gehirn",
