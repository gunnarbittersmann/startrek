				{
					"@type": "TVEpisode",
					"episodeNumber": "4.3",
					"name": "Choose to Live",
					"datePublished": "2021-12-02",
					"workTranslation": {
						"@type": "TVEpisode",
						"inLanguage": "de",
						"name": "Wähle das Leben",
						"datePublished": "2021-12-03"
